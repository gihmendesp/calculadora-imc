{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "contato.html", "use": "@vercel/static" },
    { "src": "sobre.html", "use": "@vercel/static" },
    { "src": "politica.html", "use": "@vercel/static" },
    { "src": "artigos/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
